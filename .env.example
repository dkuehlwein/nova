# Development Logging (human-readable console output)
LOG_JSON=false
LOG_LEVEL=INFO
LOG_FILE_ENABLED=True
# Path to log file (defaults to ./logs/{service_name}.log)  
LOG_FILE_PATH=None  
LOG_FILE_MAX_SIZE_MB=10  
LOG_FILE_BACKUP_COUNT=5  


# LLM
GOOGLE_API_KEY="your_api_key" 
GOOGLE_MODEL_NAME="gemini-2.5-flash-preview-04-17" 

# Agent Loop Settings
AGENT_POLLING_INTERVAL_SECONDS=30
AGENT_ERROR_RETRY_INTERVAL_SECONDS=60

# LangSmith Configuration
