# Feature Request MCP Server Environment Configuration
# Copy this file to .env and fill in the values

# Linear API Configuration - REQUIRED
# Get from: https://linear.app/settings/api  
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_API_URL=https://api.linear.app/graphql

# LiteLLM Configuration - REQUIRED
# Points to Nova's LiteLLM gateway
LITELLM_BASE_URL=http://localhost:4000
# Generate using: python ../../scripts/generate_feature_request_key.py
FEATURE_REQUEST_LITELLM_KEY=your_virtual_key_here

# Feature Request Analyzer Model Configuration
ANALYZER_MODEL_NAME=gemini-2.5-flash

# Server Configuration
HOST=127.0.0.1
PORT=8003