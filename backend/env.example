# Nova Kanban MCP Server Configuration

# Server Configuration (reusing Nova standard vars)
HOST=0.0.0.0
PORT=8001

# Database Configuration
DATABASE_URL=postgresql+asyncpg://nova:nova_dev_password@postgres:5432/nova_kanban

# PostgreSQL Configuration (for docker-compose)
POSTGRES_DB=nova_kanban
POSTGRES_USER=nova
POSTGRES_PASSWORD=nova_dev_password
POSTGRES_PORT=5432

# Development Settings
SQL_DEBUG=false
CREATE_TABLES=true

# CORS Origins (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001 